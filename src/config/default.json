
{
    "port": 8891,
    "cors": false,
    "ui": true,

    "silent": false,
    "level": "debug",

    "engine": "phantomjs",
    "options": {},
    "timeout": 120000,
    "compress": false,
    "cache": 3600,
    "cleanup": false,

    "commands": {
        "slimerjs": {
            "linux": "xvfb-run -a slimerjs",
            "freebsd": "xvfb-run -a slimerjs",
            "sunos": "xvfb-run -a slimerjs",
            "darwin": "slimerjs",
            "win32": "slimerjs.bat"
        },
        "phantomjs": {
            "linux": "phantomjs --ignore-ssl-errors=yes",
            "freebsd": "phantomjs --ignore-ssl-errors=yes",
            "sunos": "phantomjs --ignore-ssl-errors=yes",
            "darwin": "phantomjs --ignore-ssl-errors=yes",
            "win32": "phantomjs --ignore-ssl-errors=yes"
        }
    },

    "whitelist": [
        ".*"
    ]
}
